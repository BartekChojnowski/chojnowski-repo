{% form_theme form "bootstrap_3_horizontal_layout.html.twig" %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register form-horizontal">
    {{ form_widget(form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" class="btn-success btn-block btn" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}">
        </div>
    </div>
</form>
