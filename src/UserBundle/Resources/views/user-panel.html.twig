<p>
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {#{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |#}
            {{ app.user.username }}
            <a class="btn btn-primary btn-large" href="{{ path('fos_user_profile_show') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
            <a class="btn btn-primary btn-large" href="{{ path('fos_user_profile_edit') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
            <a class="btn btn-primary btn-large" href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>

        {% else %}
            <a class="btn btn-primary btn-large" href="{{ path('fos_user_security_login') }}">Logowanie</a>
            <a class="btn btn-primary btn-large" href="{{ path('fos_user_registration_register') }}">Rejestracja</a>
        {% endif %}
    </div>

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}
</p>