{% extends '::base.html.twig' %}

{% block content %}
    <a href="{{ path('employee') }}" class="btn-primary btn">Powrót do listy</a>

    <h1>Pracownik</h1>
    <div class="table-responsive">
        <table class="record_properties table table-striped">
            <tbody>
                <tr>
                    <th>Imię</th>
                    <td>{{ entity.firstName }}</td>
                </tr>
                <tr>
                    <th>Nazwisko</th>
                    <td>{{ entity.lastName }}</td>
                </tr>
                <tr>
                    <th>Pesel</th>
                    <td>{{ entity.personalId }}</td>
                </tr>
                <tr>
                    <th>Data urodzenia</th>
                    <td>{{ entity.dateOfBirth|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Data zatrudnienia</th>
                    <td>{{ entity.employmentStart|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Data zakończenia pracy</th>
                    <td>{{ entity.employmentEnd|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        <a href="{{ path('employee_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-block">
            Edytuj
        </a>
    </div>
    {{ form(delete_form) }}
</ul>
{% endblock %}
